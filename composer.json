{
    "name": "sabre/baikal",
    "type": "project",
    "description": "Ba√Økal is a lightweight CalDAV + CardDAV server based on PHP, SQLite or MySQL, and SabreDAV",
    "keywords": ["Project", "Server", "Calendar", "Contact", "WebDAV", "CalDAV", "CardDAV", "iCalendar", "lightweight"],
    "homepage": "https://sabre.io/baikal/",
    "license" : "GPL-3.0-only",
    "require": {
        "php"           : "^7.2 || ^8.0",
        "sabre/dav"     : "~4.3.0",
        "twig/twig"     : "~2.14.8",
        "symfony/yaml"  : "^3.4",
        "psr/log"       : "^1",
        "ext-dom"       : "*",
        "ext-openssl"   : "*",
        "ext-pdo"       : "*",
        "ext-zlib"      : "*",
        "symfony/http-client": "^6.3",
        "sabre/http": "^5.1"
    },
    "require-dev" : {
        "friendsofphp/php-cs-fixer": "3.3.2",
        "phpstan/phpstan": "^1.2"
    },
    "replace" : {
        "jeromeschneider/baikal" : "self.version"
    },
    "autoload": {
        "psr-0" : {
            "Baikal"         : "Core/Frameworks/",
            "Flake"          : "Core/Frameworks/",
            "Formal"         : "Core/Frameworks/"
        }
    },
    "support" : {
        "source" : "https://github.com/sabre-io/Baikal"
    },
    "scripts": {
        "cs-fixer": [
            "php-cs-fixer fix"
        ],
        "phpstan": [
            "phpstan analyse Core html"
        ],
        "test": [
            "composer cs-fixer",
            "composer phpstan"
        ]
    }
}
